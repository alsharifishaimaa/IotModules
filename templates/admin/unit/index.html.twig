{% block body %}

    <!-- Section pour afficher les données de l'unité -->
    <section id="unitDataSection" class="text-center">
        <h1 class="text-center mb-4">Afficher données unité</h1>
        <p class="lead">Consultez ci-dessous les données de toutes les unités enregistrées:</p>
        <div class="row justify-content-center">
            <div class="col-md-8">
                <table class="table table-striped table-centered">
                    <thead>
                        <tr>
                            <th>Nom du module</th>
                            <th>Type du module</th>
                            <th>État du module</th>
                            <th>Données mesurées</th>
                            <th style="width: 200px">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for unit in units %}
                        <tr>
                            <td>{{ unit.nomModule }}</td>
                            <td>{{ unit.typeModule }}</td>
                            <td>{{ unit.etatModule }}</td>
                            <td>{{ unit.donneesMesurees }}</td>
                            <td>
                                <div class="d-flex gap-2">
                                    <a class="btn btn-primary btn-sm" href="{{ path('admin.unit.edit', {id: unit.id}) }}">Editer</a>
                                    <form action="{{ path('admin.unit.delete', {id: unit.id}) }}" method="post">
                                        <input type="hidden" name="_method" value="DELETE">
                                        <button type="submit" class="btn btn-danger btn-sm">Supprimer</button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
        <div class="text-center">
            <a class="btn btn-primary" href="{{ path('admin.unit.create') }}" style="margin-top: 40px;">Ajouter un nouveau module</a>
        </div>
    </section>

{% endblock %}
