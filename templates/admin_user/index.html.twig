{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>
    <div class="container" style= "margin-bottom: 200px;">

    <table class="table">
        <thead>
            <tr>
                <th style="width: 50px;">Id</th>
                <th style="width: 200px;">Email</th>
                <th style="width: 50px;">IsVerified</th>
                <th style="width: 100px;">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
            <div class="d-flex gap-2">
                <td>
                    <a class="btn btn-primary btn-sm" href="{{ path('app_admin_user_show', {'id': user.id}) }}">show</a>
                    <a class="btn btn-primary btn-sm" href="{{ path('app_admin_user_edit', {'id': user.id}) }}">edit</a>
                </td>
            </div>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary btn-sm" href="{{ path('app_admin_user_new') }}" >Create new</a>
    </div>
{% endblock %}
